using namespace std;

int main() {
    int n;
    cin >> n;

    vector<int> a(n);
    for (int i = 0; i < n; ++i) {
        cin >> a[i];
    }

    unordered_map<int, int> count_map;
    int threshold = n / 2;

    for (int i = 0; i < n; ++i) {
        count_map[a[i]]++;
        if (count_map[a[i]] > threshold) {
            cout << 1 << endl;  // Найден элемент, который встречается больше n/2 раз
            return 0;
        }
    }

    cout << 0 << endl;  // Элемент не найден
    return 0;
}
